{
  "manifest_version": 2,
  "name": "NationStates++",
  "minimum_chrome_version": "22",
  "description": "Improves the NationStates.net experience",
  "version": "2.1.0",
  "content_scripts": [ {
	  "run_at": "document_end",
      "js": [ "jquery-2.0.2.min.js", "background.js"],
      "matches": [ "http://forum.nationstates.net/*" ],
	  "all_frames": true
	}, {
	  "run_at": "document_end",
      "js": [ "jquery-2.0.2.min.js", "background.js", "js/Blob.js", "js/FileSaver.js", "js/bootstrap-fileupload.min.js",
				"js/jquery.caret.js","js/jquery.highlight.js","js/jquery.nouislider.min.js",
				"js/textFit.min.js","js/nprogress.js","js/nationstates++_common.js", 
				"js/nationstates.js", "js/region.js", "js/nation.js", "js/newspapers.js",
				"js/happenings.js", "js/census_slider.js", "js/embassy_flags.js", "js/telegrams.js",
				"js/issues.js", "js/help.js", "js/irc.js", "js/dossier.js", "js/reports.js",
				"js/administration.js", "js/settings.js"],
	  "css": ["css/nouislider.fox.css", "css/bootstrap-button.css", "css/two_column.css", "css/bootstrap-fileupload.min.css", "css/nprogress.css", "css/nationstates++.css"],
      "matches": [ "http://www.nationstates.net/*"],
	  "all_frames": true
	} ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["storage", "http://www.nationstates.net/*", "http://forum.nationstates.net/*"]
}
